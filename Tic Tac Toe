#include <iostream>
#include <cstdlib>
#include <ctime>
using namespace std;

char board[3][3];        // 3x3 game board
char playerSymbol = 'X'; // Player will use X
char computerSymbol = 'O'; // Computer will use O

// Fill board with numbers 1-9
void setupBoard() {
    char num = '1';
    for (int i = 0; i < 3; ++i)
        for (int j = 0; j < 3; ++j)
            board[i][j] = num++;
}

// Show current state of the board
void showBoard() {
    cout << "\n";
    for (int i = 0; i < 3; ++i) {
        cout << " ";
        for (int j = 0; j < 3; ++j) {
            cout << board[i][j];
            if (j < 2) cout << " | ";
        }
        if (i < 2) cout << "\n---+---+---\n";
    }
    cout << "\n";
}

// Check if someone won
bool checkWinner(char symbol) {
    for (int i = 0; i < 3; ++i)
        if ((board[i][0] == symbol && board[i][1] == symbol && board[i][2] == symbol) ||
            (board[0][i] == symbol && board[1][i] == symbol && board[2][i] == symbol))
            return true;

    if ((board[0][0] == symbol && board[1][1] == symbol && board[2][2] == symbol) ||
        (board[0][2] == symbol && board[1][1] == symbol && board[2][0] == symbol))
        return true;

    return false;
}

// Check for draw
bool isBoardFull() {
    for (int i = 0; i < 3; ++i)
        for (int j = 0; j < 3; ++j)
            if (board[i][j] != 'X' && board[i][j] != 'O')
                return false;
    return true;
}

// Make a move
bool placeSymbol(int cell, char symbol) {
    int row = (cell - 1) / 3;
    int col = (cell - 1) % 3;

    if (cell < 1 || cell > 9 || board[row][col] == 'X' || board[row][col] == 'O')
        return false;

    board[row][col] = symbol;
    return true;
}

// Player's turn to move
void playerMove() {
    int cell;
    while (true) {
        cout << "Your turn! Choose a cell (1-9): ";
        cin >> cell;
        if (placeSymbol(cell, playerSymbol))
            break;
        cout << "That spot's taken or invalid. Try again!\n";
    }
}

// Computer's move (random)
void computerMove() {
    srand(time(0));  // Set random seed
    int cell;
    while (true) {
        cell = rand() % 9 + 1;
        if (placeSymbol(cell, computerSymbol))
            break;
    }
    cout << "Computer picks cell: " << cell << "\n";
}

int main() {
    setupBoard();
    cout << "ðŸŽ² Welcome to Tic Tac Toe!\nYou are X, Computer is O\n";

    while (true) {
        showBoard();
        playerMove();
        if (checkWinner(playerSymbol)) {
            showBoard();
            cout << " You win! Well played!\n";
            break;
        }
        if (isBoardFull()) {
            showBoard();
            cout << "It's a draw! \n";
            break;
        }

        computerMove();
        if (checkWinner(computerSymbol)) {
            showBoard();
            cout << " Computer wins. Better luck next time!\n";
            break;
        }
        if (isBoardFull()) {
            showBoard();
            cout << "It's a draw! \n";
            break;
        }
    }

    return 0;
}
