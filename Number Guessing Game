#include <iostream>  // For cin and cout
#include <cstdlib>   // For rand and srand
#include <ctime>     // For time

using namespace std;

int main() {
    srand(time(0)); // Seed random number generator

    int numberPicked = rand() % 100 + 1;  // Random number between 1 and 100
    int userGuess;                        // User's guess
    int guessCount = 0;                   // Guess counter

    cout << "=== Let's Play! ===" << endl;
    cout << "I'm thinking of a number between 1 and 100." << endl;

    while (true) {
        cout << "Type your guess: ";
        cin >> userGuess;
        guessCount++;

        if (userGuess < numberPicked) {
            cout << "Oops... that's too low!" << endl;
        } else if (userGuess > numberPicked) {
            cout << "That's too high!" << endl;
        } else {
            cout << "You got it in " << guessCount << " tries!" << endl;
            break;
        }
    }

    return 0;
}
